// Elements
.page-index
  flexbox flex
  flex-direction column
  flex 1
  align-items center

  header
    align-self normal
    flexbox flex
    align-items center
    padding 2em 2.5em
    position absolute
    width 100%

    .donate
      flex-grow 1
      flex-shrink 1

    .nav
      margin-right 0
      flex-grow 0
      flex-shrink 0
      a
        color color-white

      ul
        list-style none
        flexbox flex
        line-height inherit
        margin 0
        padding 0

        li
          margin-left 2.25em
          padding 0

.banner
  padding: 12em 0 3em 0
  text-align center
  flexbox flex
  justify-content center
  width 100%
  background-color #333
  color color-white

  .inner
    width 45em
    max-width calc(100% - 6em)
    z-index 1

  .actions
    border-top solid 1px #979797
    padding-top 3.5em
    margin-top 3.5em
