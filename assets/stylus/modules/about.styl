.about-header-container
  color white

  p
    margin 0

  .top-container
    flexbox(flex)
    margin-bottom 50px

    .name-header
      margin-right 30px

    img
      height 250px
      width 250px
      border-radius 50%
      border 10px solid white

  .tabs
    margin 0
    padding-top 20px

    .nav-item
      background-color transparent
      color #939393 !important
      border none !important

  .main-container
    flexbox(flex)
    justify-content(flex)
    align-items(center)
    flex-direction(column)

    #name-separator
      width 350px
      margin-top 10px
      margin-bottom 10px
      flexbox(flex)
      justify-content(space-between)

      .half
        width 45%
        margin-bottom 15px

      .star
        font-size 22px

    .mobile
      #name
        font-size 35px

    #name
      font-size 46px
      text-transform uppercase
      font-family 'Montserrat'
      flexbox(flex)
      font-weight normal
      flex-direction(column)
      align-items(center)
      text-align left
      align-items(flex-start)

    .info-container
      .button
        padding-left 50px
        padding-right 50px
        text-transform uppercase
        font-weight bold
        border-radius 0px

      div
        margin-top 13px
        margin-bottom 13px
        text-transform uppercase

  .district
    font-weight bold
    font-family 'Roboto Condensed'
    letter-spacing 2px
    padding-top 5px
    padding-bottom 5px
    width 220px
    text-align center

  .about-header
    color white
    font-family 'Montserrat'
    text-transform uppercase
    font-weight bold

.about-header-container
  width 100%

.about-page
  flexbox(flex)
  flex-direction(column)
  align-items(center)
  width 100%

  .section
    max-width 1100px
    font-size 20px
    padding 30px

.quote-one
  width 100%
  background-size cover
  color white
  flexbox(flex)
  justify-content(center)
  align-items(center)
  font-size 32px
  font-family 'Roboto Condensed'
  min-height 200px
  font-weight bold

  p
    margin 0

.quote-two
  width 100%
  flexbox(flex)
  justify-content(space-between)
  min-height 250px

  .quote-two-content
    width 59%
    color white
    font-size 32px
    font-family 'Roboto Condensed'
    flexbox(flex)
    justify-content(center)
    align-items(center)
    font-weight bold

    p
      margin 0

  .image
    width 39%
    height 100%
    background-size cover
    min-height 250px
