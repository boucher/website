.platform-header-container
  color white

  p
    margin 0

  .top-container
    flexbox(flex)
    margin-bottom 50px

    .name-header
      margin-right 30px

    img
      height 250px
      width 250px
      border-radius 50%
      border 10px solid white

  .tabs
    margin 0
    padding-top 20px

    .nav-item
      background-color transparent
      color #939393 !important
      border none !important

  .platform-header
    color white
    font-family 'Montserrat'
    text-transform uppercase
    font-weight bold

.platform-header-container
  width 100%

#platform-prompt
  margin-bottom 20px

.main-container
  flexbox(flex)
  justify-content(flex)
  align-items(center)
  flex-direction(column)

  #name-separator
    width 350px
    margin-top 10px
    margin-bottom 10px
    flexbox(flex)
    justify-content(space-between)

    .half
      width 45%
      margin-bottom 15px

    .star
      font-size 22px

.platform-page
  flexbox(flex)
  flex-direction(column)
  align-items(center)
  width 100%

  .section
    max-width 1100px
    font-size 20px
    padding 30px

.issue-header
  color white
  font-family 'Roboto Condensed'
  padding 20px
  margin-top 50px
  margin-bottom 50px
  align-self(flex-start)
